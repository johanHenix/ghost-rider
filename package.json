{
  "name": "ghost-rider",
  "version": "0.0.0",
  "scripts": {
    "------------------- ANGULAR -------------------": "",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "------------------- GHOST RIDER -------------------": "",
    "ghost-rider:build": "cd projects/ng-ghost-rider && ng build ng-ghost-rider && cd ../../",
    "ghost-rider:publish": "cd dist/ng-ghost-rider && npm publish && cd ../../",
    "publish": "npm-run-all sync-readme patch-version ghost-rider:build ghost-rider:publish",
    "------------------- SCULLY -------------------": "",
    "scully-build": "npx scully --cf scully.ghost-rider.config.ts",
    "scully-serve": "npx scully serve",
    "scully": "scully --cf scully.ghost-rider.config.ts",
    "------------------- TOOLS -------------------": "",
    "sync-readme": "node tools/sync-readme.js",
    "patch-version": "cd projects/ng-ghost-rider && npm version patch && cd ../../"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^14.0.6",
    "@angular/cdk": "^14.0.4",
    "@angular/common": "^14.0.6",
    "@angular/compiler": "^14.0.6",
    "@angular/core": "^14.0.6",
    "@angular/forms": "^14.0.6",
    "@angular/platform-browser": "^14.0.6",
    "@angular/platform-browser-dynamic": "^14.0.6",
    "@angular/router": "^14.0.6",
    "@scullyio/init": "^2.1.36",
    "@scullyio/scully-plugin-puppeteer": "^2.1.36",
    "ng-ghost-rider": "^0.0.17-beta",
    "rxjs": "~7.5.5",
    "tslib": "^2.4.0",
    "zone.js": "~0.11.5"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.0.6",
    "@angular/cli": "^14.0.6",
    "@angular/compiler-cli": "^14.0.6",
    "@types/jasmine": "~4.0.3",
    "@types/node": "^17.0.34",
    "autoprefixer": "^10.4.7",
    "colors": "^1.4.0",
    "jasmine-core": "~4.1.1",
    "karma": "~6.3.20",
    "karma-chrome-launcher": "~3.1.1",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.0.1",
    "karma-jasmine-html-reporter": "~1.7.0",
    "ng-packagr": "^14.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.4",
    "typescript": "~4.6.4"
  }
}
